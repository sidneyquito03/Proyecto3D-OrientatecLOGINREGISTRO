<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Flecha de regreso -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="37dp"
            android:layout_height="43dp"
            android:layout_margin="16dp"
            android:contentDescription="Flecha de retroceso"
            android:src="@drawable/btn_retroceso" />

        <!-- Rectángulo blanco detrás del título -->
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white" />

        <!-- Título de Ajustes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-47dp"
            android:gravity="center"
            android:text="AJUSTES"
            android:textColor="#00A5E0"
            android:textSize="29sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Contenedor de opciones -->
    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="301dp"
        android:layout_below="@+id/backArrow"
        android:layout_marginTop="177dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="NotSibling">

        <!-- Opción de Notificaciones -->
        <LinearLayout
            android:id="@+id/notificacionesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notificaciones"
                android:textColor="#666666"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <!-- Opción de Permisos -->
        <LinearLayout
            android:id="@+id/permisosLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Permisos"
                android:textColor="#666666"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <!-- Opción de Caché -->
        <LinearLayout
            android:id="@+id/cacheLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Caché"
                android:textColor="#666666"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <!-- Opción de Eliminar Cuenta -->
        <LinearLayout
            android:id="@+id/eliminarCuentaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar cuenta"
                android:textColor="#666666"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:contentDescription="Eliminar cuenta icono"
                android:src="@drawable/eliminar" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />
    </LinearLayout>
</RelativeLayout>
